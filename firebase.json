{
  "functions": {
    "predeploy": [
      "yarn clean",
      "yarn build:next",
      "yarn build:functions"
    ],
    "source": "dist"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**/**",
        "function": "next"
      }
    ],
    "ignore": [
      ".firebase/**",
      "firebase.json",
      ".firebaserc",
      "**/.*",
      "**/node_modules/**",
      "**/public/**"
    ]
  }
}
