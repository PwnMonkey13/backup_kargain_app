{
  "functions": {
    "source": ".",
    "ignore": [
      "node_modules",
      ".git",
      ".gitignore",
      ".nyc_output",
      "firebase-debug.log"
    ]
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**/**",
        "function": "next"
      }
    ],
    "ignore": [
      ".firebase/**",
      "firebase.json",
      ".firebaserc",
      "**/node_modules/**",
      "**/.*",
      "**",
      "!public",
      "!i18.json"
    ]
  }
}
